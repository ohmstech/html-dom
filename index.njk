        {% for posts in chunkPosts %}        
            {% set product = products[(loop.index - 1)] %}
            {% for post in posts %}
            <div class="grid__item home-example">
                <div class="home-example__inner">
                    <div class="home-example__category home-example__category--{{ post.data.category | lower }}">{{ post.data.category }}</div>
