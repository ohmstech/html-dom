                        <div class="home-product__head">
                            <img height="48" width="48" src="/assets/{{ product.name | slug }}.png" alt="{{ product.description }}" />
                            <h3 class="home-product__name">{{ product.name }}</h3>
                        </div>
                        <div class="home-product__desc">{{ product.description }}</div>
                    </a>
